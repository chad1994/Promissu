<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/dialog_cl"
    android:layout_height="250dp"
    android:layout_width="312dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/dialog_text1"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:layout_width="wrap_content"
        android:lineSpacingExtra="12sp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="준영님에게 위치를" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/dialog_text2"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:lineSpacingExtra="12sp"
        android:textColor="@color/colorStrong"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_text1"
        tools:text="요청하시겠습니까?" />

    <Button
        android:background="@color/black_2"
        android:id="@+id/dialog_button_cancel"
        android:layout_height="59dp"
        android:layout_width="0dp"
        android:text="취소"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialog_button_accept" />

    <Button
        android:background="@color/colorStrong"
        android:id="@+id/dialog_button_accept"
        android:layout_height="59dp"
        android:layout_width="200dp"
        android:text="요청"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dialog_button_cancel"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
