<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- selected -->
    <item android:state_checked="true">
        <inset android:insetBottom="0dp" android:insetLeft="0dp" android:insetRight="0dp" android:insetTop="0dp">
            <shape android:shape="oval">
                <solid android:color="@color/white" />
                <size android:width="100dp" android:height="100dp" />
                <stroke android:width="2dp" android:color="#4b56a5" />
            </shape>
        </inset>
    </item>

    <!-- pressed -->
    <item android:state_pressed="true">
        <inset android:insetBottom="0dp" android:insetLeft="0dp" android:insetRight="0dp" android:insetTop="0dp">
            <shape android:shape="oval">
                <solid android:color="@color/white" />
                <size android:width="100dp" android:height="100dp" />
                <stroke android:width="2dp" android:color="#4b56a5" />
            </shape>
        </inset>
    </item>

    <!-- not pressed -->
    <item>
        <inset android:insetBottom="4dp" android:insetLeft="4dp" android:insetRight="4dp" android:insetTop="4dp">
            <shape android:shape="oval">
                <solid android:color="@color/white" />
                <size android:width="100dp" android:height="100dp" />
            </shape>
        </inset>
    </item>
</selector>
